{% block html_head_container %}

{% include 'components/html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}} {{page_theme}}" data-template="base.twig">
		<header class="header layout layout--hbox layout--spread layout--middle">
			{% block header %}
				<h1 class="header-logo layout__item layout__item--fixed-size" role="banner">
					<a class="header-logo-link" href="{{site.url}}" rel="home">
						<img src='{{site.theme.link}}/static/svg/somes-delivery/somes-delivery.svg' alt='{{site.name}}'>
					</a>
				</h1>
				<nav id="nav-main" class="nav-main layout__item layout__item--grow" role="navigation">
					{% include "components/menu.twig" with {'menu': menu.get_items} %}
				</nav><!-- #nav -->

				<form class='searchbox layout__item layout__item--fixed-size' action="{{site.url}}" method='GET'>
					<input class='searchbox__input' name='s' type='search' placeholder='Caută în site'/>
				</form>
			{% endblock %}
		</header>

		<section role="main" class="content">

			{% block hero %} 
				<!-- HERO GOES HERE --> 
			{% endblock %}

			{% block content %}
				Sorry, no content
			{% endblock %}
		</section>

		{% block footer %}
			{% include 'components/footer.twig' %}
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
