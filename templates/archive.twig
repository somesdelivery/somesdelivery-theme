{% extends 'base.twig' %}

{% block content %}
	<div class='container container--padded'>

		{% include 'components/masthead-simple.twig' %}

		{% for row in posts | batch(2) %}
			<div class='layout layout--grid'>
			{% for post in row %}
				<div class='layout__item'>
					{% include ['components/tease-'~post.post_type~'.twig', 'components/tease.twig'] %}
				</div>
			{% endfor %}
			{% if row | length < 2 %}
				<div class='layout__item'><!-- dummy --></div>
			{% endif %}
			</div>
		{% endfor %}
		{% if pagination %}
			{% include 'components/pagination.twig' %}
		{% endif %}
	</div>
{% endblock %}