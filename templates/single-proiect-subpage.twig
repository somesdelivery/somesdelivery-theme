{% set page_theme = 'theme-longread' %}

{% extends "base.twig" %}

{% block content %}
	<div class='container container--padded'>
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		
				<!-- Project title -->
				{% include 'components/masthead-project-subpage.twig' %}

				<!-- Project intro -->
				<div class='content__intro'>
					{{post.post_excerpt }}
				</div>

				<div class='content__body'>
					{{ post.content }}
				</div>

				{% if post.get_field('galerie') | length %}
					<!-- Project gallery -->
					<h3>Galerie foto</h3>
					{% 
						include 'components/gallery.twig' with {
							'gallery': post.get_field('galerie')
						}
					%}
				{% endif %}
				
				{% include 'components/social-media.twig' %}
		</article>
	</div>

	{% include 'include/slideshow-script.twig' %}
{% endblock %}
