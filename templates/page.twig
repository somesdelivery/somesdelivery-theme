{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<div class='article-meta'>
					{% block content_title %}
					<h1 class="article-title">{{post.title}}</h1>
					{% endblock %}
				</div>
				<div class="article-body">
					{% block content_body %}
					{{post.content}}
					{% endblock %}
				</div>
			</section>

			{% block content_meta %}
				<!-- Article meta box -->
			{% endblock %}
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}