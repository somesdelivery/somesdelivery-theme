<div class='teasebox teasebox--event'>
	<div class='teasebox__label teasebox__label--floating'>
			<strong>{{ event.orele }}</strong> 
			<span>{{ event.locul }}</span>
	</div>
	<a class='teasebox__thumb' href="{{event.evenimentul.link}}">
		<img src="{{event.evenimentul.thumbnail.src | default(default_thumbnail) | resize(800, 500) }}" />
	</a>
	<div class='teasebox__info'>
		<h2 class='teasebox__title'>
			<a href="{{event.evenimentul.link}}">{{event.evenimentul.title}}</a>
		</h2>
		<p class='teasebox__desc'>{{ event.evenimentul.get_preview(25, false, '') }}</p>
	</div>
</div>