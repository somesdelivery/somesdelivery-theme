<div class='teasebox'>
	<a class='teasebox__thumb' href="{{interviu.link}}">
		{% set imagine = interviu.get_field('intervievat_imagine') %}
		<img src="{{ TimberImage(imagine).src | default(default_thumbnail) | resize(600, 400) }}" alt='{{interviu.title}}'/>
	</a>
	<div class='teasebox__info'>
		<h2 class='teasebox__title'><a href="{{interviu.link}}">{{interviu.title}}</a></h2>
		<p class='teasebox__desc'>{{ interviu.get_preview(50, false, '') }}</p>
	</div>
</div>